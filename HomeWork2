package com.company;
// @author Sokolova
// @version 12.09.21 /
class HomeWork2 {
    public static void main(String[] args) {
        System.out.println(within10and20(5,3));
        System.out.println(within10and20(-5,-3));
        System.out.println(positiveNegativeNumber(10));
        System.out.println(positiveNegativeNumber(0));
        System.out.println(positiveNegativeNumber(-10));
        System.out.println(negativeNumber(-10));
        System.out.println(negativeNumber(100));
        System.out.println(negativeNumber(0));
        repeatString("Repeat String, Java!", 5);
    }

     // ** Первое задание
     static boolean within10and20(int x1, int x2) {
        int sum = x1 + x2;
        return sum >= 10 && sum <= 20;
    }

    // ** Второе задание
     static String positiveNegativeNumber(int a) {
        return a >= 0 ? "Положительное" : "Отрицательное";
    }

    // ** Третье задание
     static String negativeNumber(int a) {
        return a <= 0 ? "true" : "false";
    }

    // ** Четвертое задание
     static void repeatString(String s, int count) {
        for (int i = 0; i < count; i++) {
            System.out.println(s);
        }
    }
}
